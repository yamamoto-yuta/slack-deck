{
    "manifest_version": 2,
    "name": "SlackDeck",
    "description": "A Chrome extension to use Slack like TweetDeck",
    "version": "0.5.1",
    "browser_action": {
        "default_icon": "icon16.png",
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": [
            "js/eventPage.js"
        ],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": [
                "https://app.slack.com/client/*"
            ],
            "js": [
                "js/contents.js"
            ]
        }
    ],
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "permissions": [
        "storage"
    ],
    "homepage_url": "https://github.com/yamamoto-yuta/slack-deck"
}